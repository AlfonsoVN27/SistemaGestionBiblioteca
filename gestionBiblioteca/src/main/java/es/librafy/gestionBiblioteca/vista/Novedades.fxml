<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.librafy.gestionBiblioteca.controlador.NovedadesControlador">
    <VBox spacing="20" alignment="CENTER" style="-fx-padding: 20;">
        
        <!-- Cabecera -->
        <Label text="Últimas Novedades" style="-fx-font-size: 24; -fx-text-fill: #333;" />

        <!-- Tarjeta de Novedad -->
        <AnchorPane fx:id="tarjetaNovedad" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15;">
            <VBox spacing="10">
                <!-- Imagen -->
                <ImageView fx:id="imagenNovedad" fitWidth="300" fitHeight="150" />
                
                <!-- Título -->
                <Label fx:id="tituloNovedad" text="Nuevo Libro Añadido" style="-fx-font-size: 18; -fx-text-fill: #2a2a2a;" />

                <!-- Descripción -->
                <Label fx:id="descripcionNovedad" text="Explora nuestro último libro disponible en la biblioteca." wrapText="true" />

                <!-- Botón Leer Más -->
                <Button text="Leer más" onAction="#mostrarDetalle" style="-fx-background-color: #0066FF; -fx-text-fill: white;" />
            </VBox>
        </AnchorPane>
    </VBox>
</AnchorPane>
